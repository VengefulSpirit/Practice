<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center" >
	<ImageView
		android:id="@+id/tab_iv"
		android:layout_width="@dimen/tab_image_width"
		android:layout_height="@dimen/tab_image_width" />
	<TextView 
	    android:id="@+id/tab_tv"
		android:gravity="center"
		android:textColor="@drawable/tab_text"
		android:textSize="12sp"
		android:layout_marginBottom="@dimen/tab_text_margin"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>
</LinearLayout>
